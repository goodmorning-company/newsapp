rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    match /media/articles/{articleId}/{filename} {
      // üåç Lectura p√∫blica (thumbnails, covers)
      allow read: if true;

      // ‚úçÔ∏è Escritura solo para usuarios autenticados
      allow write: if isSignedIn()
        && request.resource.size < 5 * 1024 * 1024   // < 5MB
        && request.resource.contentType.matches('image/.*');
    }

    // üîí Todo lo dem√°s bloqueado
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
